<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-title">Airline:
      <select name="airline" id="Airline">
        <option value="<%= flight.airline %>"><%= flight.airline %>
        </option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </label><br>
    <label for="airport-title">Airport:
      <select name="airport">
        <option value="<%= flight.airport %>"><%= flight.airport %>
        </option>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label for="flightNo-title">Flight Number:
      <input type="number" name="flightNo" value="<%= flight.flightNo %>" id="flightNo-input">
    </label><br>
    <label for="departs-title">Departs:
      <input type="datetime-local" name="departs" value="<%= flight.departs %>" id="departs-input">
    </label><br>
    <button type="submit">SAVE FLIGHT</button>
  </form>
</main>
  
<%- include('../partials/footer') %>

